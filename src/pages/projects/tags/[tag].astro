---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { projects } from "../../../data/projectsData.js";

export async function getStaticPaths() {
  const allTags = [...new Set(projects.flatMap((project) => project.tags))];
  return allTags.map((tag) => ({
    params: { tag },
    props: { tag }
  }));
}

const { tag } = Astro.params;
const filteredProjects = projects.filter((project) => project.tags.includes(tag));
---

<BaseLayout pageTitle={`Projects tagged with "${tag}"`}>
  <h1>Projects tagged with "{tag}"</h1>
  <a href="/projects" class="back-link">‚Üê Back to All Projects</a>
  <section class="projects-list">
    {filteredProjects.map((project) => (
      <div class="project-card">
        <img src={project.image} alt={project.title} />
        <div class="project-info">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tags">
            {project.tags.map((tag) => (
              <span class="tag"><a href={`/projects/tags/${tag}`}>{tag}</a></span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </section>
</BaseLayout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: #00539F;
    text-decoration: none;
  }
  :root.dark .back-link {
    color: white;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .projects-list {
    flex: 3;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .project-card {
    display: flex;
    gap: 1rem;
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 8px;
    align-items: center;
  }

  .project-card img {
    width: 100%;
    max-width: 200px;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  .project-info {
    flex: 1;
  }

  .project-info h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .tags {
    margin-top: 0.5rem;
  }

  .tag {
    display: inline-block;
    margin-right: 0.5rem;
    padding: 0.25rem 0.5rem;
    background-color: #f0f0f0;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .tag a {
    text-decoration: none;
    color: black;
  }

  .tag a:hover {
    text-decoration: underline;
  }
</style>