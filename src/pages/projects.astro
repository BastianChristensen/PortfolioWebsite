---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Projects";
const projects = [
  {
    title: "Project 3",
    description: "This is the third project.",
    tags: ["web", "design"],
    image: "/images/project1.jpg",
    url: "/projects/project-1"
  },
  {
    title: "Project 2",
    description: "This is the second project.",
    tags: ["app", "development"],
    image: "/images/project2.jpg",
    url: "/projects/project-2"
  },
  {
    title: "Project 1",
    description: "This is the first project.",
    tags: ["web", "development"],
    image: "/images/project3.jpg",
    url: "/projects/project-3"
  }
];

const uniqueTags = [...new Set(projects.flatMap((project) => project.tags))];
---
<BaseLayout pageTitle={pageTitle}>
  <h1>Browse my Projects</h1>
  <h2>PROJECTS</h2>
  <br />
  <br />

  <div class="projects-page">
    <!-- Tag Filter -->
    <aside class="tags-list">
      <h3>Search by Tag</h3>
      <ul>
        {uniqueTags.map((tag) => (
          <li><a href={`/projects/tags/${tag}`}>{tag}</a></li>
        ))}
      </ul>
    </aside>

    <!-- Project Cards -->
    <section class="projects-list">
      {projects.map((project) => (
        <div class="project-card">
          <img src={project.image} alt={project.title} />
          <div class="project-info">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <div class="tags">
              {project.tags.map((tag) => (
                <span class="tag"><a href={`/projects/tags/${tag}`}>{tag}</a></span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </section>
  </div>
</BaseLayout>

<style>
  body {
    width: 100%;
    max-width: 80ch;
    padding: 1rem;
    line-height: 1.5;
  }

  h1 {
    text-align: left;
    line-height: 0;
    padding-top: 1rem;
    font-size: 2.5rem;
    word-break: break-word;
  }

  h2 {
    color: orange;
    text-align: left;
    line-height: 0;
  }

  h3 {
    color: orange;
    text-align: left;
    line-height: 1.2;
  }

  html.dark h2 {
    color: greenyellow;
  }
  html.dark h3 {
    color: greenyellow;
  }
  html.dark .tags-list {
    background-color: #3b3b3b;
  }
  html.dark .tags-list a {
    color: #ffffff;
  }

  .projects-page {
    display: flex;
    gap: 2rem;
  }

  .tags-list {
    flex: 1;
    background-color: #f8f8f8;
    padding: 1rem;
    border-radius: 8px;
    max-height: fit-content;
    align-self: flex-start
  }

  .tags-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tags-list li {
    margin-bottom: 0.5rem;
  }

  .tags-list a {
    color: #000000;
    text-decoration: none;
  }

  .tags-list a:hover {
    text-decoration: underline;
  }

  .projects-list {
    flex: 3;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2rem; /* Add space between the last project card and the footer */
  }

  .project-card {
    display: flex;
    gap: 1rem;
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 8px;
  }

  .project-card img {
    width: 150px;
    height: auto;
    border-radius: 8px;
  }

  .project-info {
    flex: 1;
  }

  .project-info h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .tags {
    margin-top: 0.5rem;
  }

  .tag {
    display: inline-block;
    margin-right: 0.5rem;
    padding: 0.25rem 0.5rem;
    background-color: #f0f0f0;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .tag a {
    text-decoration: none;
    color: #000000;
  }

  .tag a:hover {
    text-decoration: underline;
  }
</style>