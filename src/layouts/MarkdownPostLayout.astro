---
import BaseLayout from './BaseLayout.astro';

const { title = "No Title", pubDate = "DD/MM/YYYY" } = Astro.props;
---
<BaseLayout pageTitle={title}>
  <h1>{title}</h1>
  <a href="/News" class="back-link">‚Üê Back to News</a>
  <b>
    <span style="color: var(--pub-date-color, #ff0000);">Published:</span> {pubDate}
  </b>
  <slot />
</BaseLayout>

<style>
  :root.dark {
    --pub-date-color: rgb(148, 66, 255);
  }
    
  a {
    color: #00539F;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  :root.dark a {
    color: #FFD700 !important; 
  }
  :root.dark a:hover {
    text-decoration: underline !important;
  }
  :root.dark a:visited {
    color: #FFD700 !important;
  }
  
  h3 {
    font-weight: normal;
  }
  b {
    font-weight: bold;
    color: black;
  }
  :root.dark b {
    color: white;
  }
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: #00539F;
    text-decoration: none;
  }
  .back-link:hover {
    text-decoration: underline;
  }
</style>