---
import BaseLayout from './BaseLayout.astro';

const { title, upDate, proNum, color } = Astro.props;
---
<BaseLayout pageTitle={title}>
    <h1>Project {proNum}: <span style={`color: ${color};`}>{title}</span></h1>
    <a href="/projects" class="back-link">‚Üê Back to All Projects</a>
    <b style="font-size: 1.2em;">Updated: {upDate}</b>
    <slot />
</BaseLayout>

<style>
  a {
    color: #00539F;
  }
  h3 {
    font-weight: normal;
  }
  b {
    color: orange
  }
  :root.dark b {
    color: greenyellow;
  }
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: #00539F;
    text-decoration: none;
  }
  :root.dark .back-link {
    color: white;
  }

  .back-link:hover {
    text-decoration: underline;
  }